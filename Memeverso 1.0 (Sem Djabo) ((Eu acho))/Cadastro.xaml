<Window x:Class="Memeverso_1._0__Sem_Djabo____Eu_acho__.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro" Height="480" Width="860" WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize" FontFamily="Segoe UI">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF071233" Offset="0.0"/>
                <GradientStop Color="#FF072B62" Offset="0.35"/>
                <GradientStop Color="#FF1457C8" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Cartão central -->
        <Border Width="760" Padding="22" CornerRadius="12" HorizontalAlignment="Center" VerticalAlignment="Top"
                Background="#F8FBFF" Opacity="0.98" Margin="0,58,0,0">
            <Border.Effect>
                <DropShadowEffect Color="#000000" Opacity="0.25" BlurRadius="18" ShadowDepth="6"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Text="Cadastrar Memeiro" FontSize="22" FontWeight="Bold" Foreground="White" Margin="240,-59,255,264" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleY="0.161"/>
                            <RotateTransform/>
                            <TranslateTransform Y="0.504"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <!-- Coluna esquerda -->
                <StackPanel Grid.Column="0" Margin="8,8,8,8">

                    <TextBlock Text="Nome" Foreground="#1B4E86" FontSize="14" Margin="2,6,0,4"/>
                    <TextBox x:Name="Box_Usuario_Registro" Height="36" FontSize="14" Padding="8" BorderBrush="#2B6CE6" BorderThickness="1.5" TextChanged="Box_Usuario_Registro_TextChanged" />

                    <TextBlock Text="Gmail" Foreground="#1B4E86" FontSize="14" Margin="2,12,0,4"/>
                    <TextBox x:Name="Box_Gmail_Registro" Height="36" FontSize="14" Padding="8" BorderBrush="#2B6CE6" BorderThickness="1.5" />

                    <TextBlock Text="Observação" Foreground="#6B7FA6" FontSize="12" Margin="2,12,0,4"/>
                    <TextBlock TextWrapping="Wrap" Foreground="#4E6B9E" FontSize="12"><Run Language="pt-br" Text=" "/><Run Text="Mantenha sua senha segura. Evite usar senhas óbvias."/></TextBlock>
                    <TextBlock Text="Batima está averiguando você" Foreground="#3E598D" FontSize="12" Margin="4,12,0,0"/>
                </StackPanel>

                <!-- Coluna direita -->
                <StackPanel Grid.Column="1" Margin="8">
                    <TextBlock Text="Senha" Foreground="#1B4E86" FontSize="14" Margin="2,6,0,4"/>
                    <PasswordBox x:Name="Senha" Height="36" FontSize="14" Padding="8" BorderBrush="#2B6CE6" BorderThickness="1.5"/>

                    <TextBlock Text="Confirmar Senha" Foreground="#1B4E86" FontSize="14" Margin="2,12,0,4"/>
                    <PasswordBox x:Name="Senha_Confirm" Height="36" FontSize="14" Padding="8" BorderBrush="#2B6CE6" BorderThickness="1.5"/>

                    <Button x:Name="But_Registro_Confirm" Content="Confirmar" Height="44" Margin="0,18,0,0"
                            FontSize="16" Foreground="White" Click="But_Registro_Confirm_Click">
                        <Button.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#103B74" Offset="0.0"/>
                                <GradientStop Color="#2B6CE6" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Button.Background>
                        <Button.Padding>10,6</Button.Padding>
                    </Button>

                   
                </StackPanel>

                <!-- Imagem decorativa no canto superior direito do cartão -->
                <Image Source="/download (9).jpg" Width="84" Height="84" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,-80,-35,0" Stretch="UniformToFill" Grid.Column="1">
                    <Image.Clip>
                        <EllipseGeometry Center="42,42" RadiusX="42" RadiusY="42"/>
                    </Image.Clip>
                </Image>
            </Grid>
        </Border>
    </Grid>
</Window>
